{% extends 'parent.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}

{% block body %}
    {% block main %}

        <div class="container">
            <div class="row justify-content-center mt-5">
                <div class="col-md-6">

                    <h2 class="text-center mb-4">Cr√©er un exercice</h2>

                    {{ form_start(form, {'method': 'POST'}) }}

                    <div class="form-group">
                        {{ form_label(form.name, "Nom de l'exercice : ") }}
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control', 'placeholder': "Nom de l'exercice", 'autofocus': 'autofocus'} }) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Enregistrer</button>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>

    {% endblock %}
{% endblock %}
